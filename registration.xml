<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">  <!--обяз-->

<suite name="Registration tests">  <!-- тест-комплект "Регистрация"-->
  <test name = "registration">     
    <groups>
       <run>
         <include name="g3"/>          <!-- запускаем @тесты группы g3...-->
       </run>
    </groups>
    <classes>
      <class name="test.SignUpMainPage">  <!-- класса SignUpMainPage-->
         <methods>  <!-- method - это @Test -->
                 <!--exclude name = methodname - так можно отключить какой-нить @Test. Можно вообще не работать с группами, а работать только с классами и в этих классах включать\выключать определенные методы-->
         </methods>
      </class>
    </classes>
  </test>
</suite>